<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/layoutClick"
    app:cardElevation="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/food_test"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12312312123"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"/>

                <TextView
                    android:id="@+id/item_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12312312123"
                    android:drawableLeft="@drawable/ic_baseline_restaurant_24"
                    android:drawablePadding="6dp"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12312312123"
                    android:drawableLeft="@drawable/ic_baseline_money_24"
                    android:drawablePadding="6dp"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/item_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12312312123"
                    android:drawableLeft="@drawable/ic_baseline_money_24"
                    android:drawablePadding="6dp"
                    android:textSize="18dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.google.android.material.card.MaterialCardView>