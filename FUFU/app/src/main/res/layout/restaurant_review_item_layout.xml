<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/j_btn_card"
    android:orientation="horizontal"
    android:padding="4dp"
    >
    <ImageButton
        android:id="@+id/review_user_avt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/anhbia01"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/review_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Võ Chí Dũng"
            android:textSize="@dimen/textSize"
            android:textColor="@color/text_color_1"
            android:textStyle="bold"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-74dp"
            android:layout_marginTop="-18dp"
            android:progressBackgroundTintMode="multiply"
            android:progressTint="@color/yellow_600"
            android:numStars="5"
            android:rating="4"
            android:scaleY="0.4"
            android:scaleX="0.4"
            android:stepSize="1"
            android:isIndicator="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món này ngon quá shop ơiii"
            android:layout_marginTop="-21dp"
            android:textSize="@dimen/textSize"
            />
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        app:menu="@menu/review_menu"
        />
</LinearLayout>