<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_0"
    tools:context=".ui.main_component.fragment.HomeFragment">

    <ImageView
        android:id="@+id/res_avt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anhbia01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="vertical"
        android:scrollbarSize="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/res_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/j_btn_card"
            android:orientation="vertical"
            android:padding="8dp"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quán phở bò Năm - Nam"
                android:textAlignment="center"
                android:textColor="@color/text_color_0"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Quán phở bò Năm - Nam" />

            <TextView
                android:id="@+id/res_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="125, Nguyễn Minh Châu, Hòa Hải, Nghũ Hành Sơn, Đà Nẵng"
                android:textAlignment="center"
                android:textColor="@color/text_color_2"
                android:textSize="9sp"
                tools:ignore="SmallSp"
                tools:text="125, Nguyễn Minh Châu, Hòa Hải, Nghũ Hành Sơn, Đà Nẵng" />

            <RatingBar
                android:id="@+id/res_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTintMode="multiply"
                android:progressTint="@color/yellow_600"
                android:rating="3"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:stepSize="0.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/res_open_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mở cửa: 8:00am - 10:00pm"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_1"
                    android:textSize="9sp"
                    tools:text="Mở cửa: 8:00am - 10:00pm" />

                <TextView
                    android:id="@+id/res_price_range"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giá: 20.000đ - 100.000đ"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_1"
                    android:textSize="9sp"
                    tools:text="Giá: 20.000đ - 100.000đ" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingTop="70dp"
            android:paddingBottom="8dp"
            android:background="@color/background_color_0"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="4dp"
                android:text="@string/menu"
                android:textSize="@dimen/textTitleSize"
                android:textStyle="bold"
                android:textColor="@color/text_color_0"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_restaurant_reviews_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/restaurant_menu_item_layout"
                tools:itemCount="6"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>